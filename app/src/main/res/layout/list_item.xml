<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40ffffff">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Neil Learned Swift With Treehouse and Released His First App"
        android:id="@+id/blogTitle"
        android:layout_marginLeft="7.5dp"
        android:textSize="18sp"
        android:layout_marginRight="7.5dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/blogAuthor"
        android:singleLine="false"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faye Bridge"
        android:id="@+id/blogAuthor"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2.5dp"
        android:layout_marginRight="7.5dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-12-30"
        android:id="@+id/blogDate"
        android:layout_marginRight="7.5dp"
        android:layout_below="@+id/blogAuthor"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2.5dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:layout_marginBottom="2.5dp" />
</RelativeLayout>